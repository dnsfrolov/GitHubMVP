<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softmiracle.githubmvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.SempraApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SempraTheme_light">
        <activity android:name=".presentation.modules.start.StartActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.modules.user.ProfilePagerActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.login.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/SempraTheme_light.Login" />
        <activity
            android:name=".presentation.modules.home.HomeActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.repo.RepositoryActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.user.followers.FollowersActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.user.following.FollowingActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.starred.repoStarred.RepoStarredActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.repo.detail.watchers.WatchersActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.repo.detail.forks.ForksActivity"
            android:theme="@style/SempraTheme_light" />
        <activity
            android:name=".presentation.modules.search.SearchActivity"
            android:theme="@style/SempraTheme_light" />

        <activity
            android:name=".presentation.modules.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.AppCompat" />
    </application>

</manifest>