<resources>

    <!-- Base application theme. -->
    <style name="SempraTheme_light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimary_dark</item>
        <item name="colorAccent">@color/colorAccent_light</item>
    </style>

    <style name="SempraTheme_dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimary_light</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
    </style>

    <!--toolbar-->
    <style name="SempraToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:textColorSecondary">?attr/content_color</item>
    </style>

    <!--tabLayout-->
    <style name="SempraTabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/title_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabTextColor">?attr/subtitle_color</item>
    </style>

</resources>
